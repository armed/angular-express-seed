!!!
html(lang='en', ng-app='myApp')
  head
    meta(charset='utf-8')
    title My Application
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='My Application')
    meta(name='author', content='artem.medeu@gmail.com')

    if env === 'development'
      // vendor links
      link(href='public/components/bootstrap/css/bootstrap.css', rel='stylesheet')
      link(href='public/components/bootstrap/css/bootstrap-responsive.css',
        rel='stylesheet')
      // app links
      link(href='public/css/app.css')
    else
      link(href='/public/dist/css/vendor.css', rel='stylesheet')
      link(href='/public/dist/css/app.css', rel='stylesheet')

    style(type='text/css')
      body {
        padding-top: 60px;
      }

  body(ng-controller='MainController')
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') My Application
          .nav-collapse.collapse
            ul.nav
              li.active
                a(href='#') Home

    .container-fluid

  if env === 'development'
    // vendor scripts
    script(type='text/javascript', src='/public/components/jquery/jquery.js')
    script(type='text/javascript', src='/public/components/angular/angular.js')
    script(type='text/javascript',
      src='/public/components/angular-cookies/angular-cookies.js')
    script(type='text/javascript',
      src='/public/components/angular-resource/angular-resource.js')
    script(type='text/javascript',
      src='/public/components/bootstrap/js/bootstrap.js')
    // app scripts
    script(type='text/javascript', src='/public/js/app.js')
    script(type='text/javascript', src='/public/js/controllers/mainCtrl.js')
  else
    script(type='text/javascript', src='/public/dist/js/vendor.js')
    script(type='text/javascript', src='/public/dist/js/app.js')

